<% layout("/layouts/boilerplate")%>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <div class="col-8 offset-2 mt-2">
        <h3><%= listing.title %></h3>
      </div>

      <div class="listing-card col-6 offset-2">
        <img
          src="<%=listing.image.url %>"
          class="card-img-top show-img"
          alt="listing_image"
        />
        <div class="card-show">
          <p><i>Owned by :<%= listing.owner.username %></i></p>

          <p><strong>Name:</strong> <%= listing.title %></p>
          <p><strong>Description:</strong> <%= listing.description %></p>
          <p><strong>Price:</strong> â‚¹ <%= listing.price %></p>
          <p><strong>Location:</strong> <%= listing.location %></p>
          <p><strong>Country:</strong> <%= listing.country %></p>
          <p><strong>Availability:</strong> <%= listing.availability %></p>
          <p><strong>Price Summary:</strong> <%= listing.priceSummary %></p>
          <p><strong>Contact:</strong> <%= listing.contact %></p>
        </div>
      </div>

      <!-- buttons -->
      <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
      <div class="col-6 offset-2 btnss">
        <button class="btn btn-dark col-2 add-btn">
          <a
            style="text-decoration: none; color: white"
            href="/listings/<%= listing._id %>/edit"
            >Edit</a
          >
        </button>

        <p class="col-1"></p>
        <form
          method="POST"
          action="/listings/<%=listing._id%>?_method=DELETE"
          class="col-2"
        >
          <button class="btn btn-dark">Delete</button>
        </form>
      </div>
      <% } %> <% if (currentUser && currentUser._id.toString() ===
      listing.owner._id.toString()) { %>

      <!-- Show Analytics button if current user is the owner -->
      <a
        href="/listings/<%= listing._id %>/analytics"
        class="btn btn-warning offset-2 mt-4"
        >Analytics</a
      >

      <% } else { %>

      <!-- Show Book Now button if not owner -->
      <!-- Book Now Button -->
      <div class="offset-2 pt-4">
        <button class="btn btn-primary" id="toggleBookingFormBtn">
          Book Now
        </button>
      </div>

      <!-- Booking Form (Initially Hidden) -->
      <form
        class="offset-2 pt-4"
        action="/bookings/<%= listing._id %>"
        method="POST"
        id="bookingForm"
        style="display: none"
      >
        <div class="mb-3">
          <label for="name">Full Name</label>
          <input
            type="text"
            class="form-control"
            name="booking[name]"
            required
          />
        </div>
        <div class="mb-3">
          <label for="phone">Phone Number</label>
          <input
            type="tel"
            class="form-control"
            name="booking[phone]"
            required
          />
        </div>
        <div class="mb-3">
          <label for="aadhar">Aadhar Number</label>
          <input
            type="text"
            class="form-control"
            name="booking[aadhar]"
            required
          />
        </div>
        <div class="mb-3">
          <label for="address">Permanent Address</label>
          <textarea
            class="form-control"
            name="booking[address]"
            required
          ></textarea>
        </div>
        <div class="mb-3">
          <label for="guests">Number of Guests</label>
          <input
            type="number"
            class="form-control"
            name="booking[guests]"
            min="1"
            required
          />
        </div>
        <div class="mb-3">
          <label for="days">Number of Days to Stay</label>
          <input
            type="number"
            class="form-control"
            name="booking[days]"
            min="1"
            required
          />
        </div>
        <button class="btn btn-success">Submit Booking</button>
      </form>

      <% } %>

      <br />
      <hr />
      <hr />

      <!-- review form  -->

      <div class="col-8 offset-2">
        <% if(currUser){ %>
        <h4>Leave a review</h4>

        <form
          action="/listings/<%=listing._id %>/reviews"
          method="POST"
          novalidate
          class="needs-validation"
        >
          <!-- <div>
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]">
                  </div> -->

                  <!-- reviews and comments below -->
          <div>
            <label for="rating" class="form-label">Rating</label>
            <fieldset class="starability-slot">
              <input
                type="radio"
                id="no-rate"
                class="input-no-rate"
                name="review[rating]"
                value="1"
                checked
                aria-label="No rating."
              />
              <input
                type="radio"
                id="first-rate1"
                name="review[rating]"
                value="1"
              />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input
                type="radio"
                id="first-rate2"
                name="review[rating]"
                value="2"
              />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input
                type="radio"
                id="first-rate3"
                name="review[rating]"
                value="3"
              />
              <label for="first-rate3" title="Average">3 stars</label>
              <input
                type="radio"
                id="first-rate4"
                name="review[rating]"
                value="4"
              />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input
                type="radio"
                id="first-rate5"
                name="review[rating]"
                value="5"
              />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>

          <div class="mt-3">
            <label for="comments" class="form-label">Comments</label>
            <textarea
              class="form-control"
              name="review[comment]"
              id="comments"
              cols="30"
              rows="5"
            ></textarea>
            <div class="invalid-feedback">
              Please add some comments for reviews
            </div>
          </div>
          <button class="mt-3 mb-3 btn btn-outline-dark">Submit</button>
        </form>
        <% } %>
      </div>

      <h4>Reviews</h4>

      <div class="row">
        <% for (review of listing.reviews) {%>
        <div class="card col-5 ms-3 mb-2 mt-1">
          <div class="card-body">
            <p class="card-text">
              <i> @<%= review.author.username %></i>
            </p>
            <p
              class="starability-result card-text"
              data-rating="<%= review.rating %>"
            ></p>

            <p class="card-text"><%= review.comment %></p>
          </div>
          <form
            class="mb-3"
            method="POST"
            action="/listings/<%=listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          >
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>

        <% } %>
      </div>
    </div>
  </div>
  <script>
    const toggleBtn = document.getElementById("toggleBookingFormBtn");
    const form = document.getElementById("bookingForm");
  
    toggleBtn.addEventListener("click", (e) => {
      e.preventDefault();
      form.style.display = form.style.display === "none" ? "block" : "none";
      toggleBtn.style.display = "none"; // Hide button after clicking
    });
  
    form.addEventListener("submit", () => {
      toggleBtn.style.display = "none";
      form.style.display = "none";
    });
  </script>
  
</body>
