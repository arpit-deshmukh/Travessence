<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <h3 class="col-6 offset-3" style="text-align: center;">Sign Up</h3>

        
        <div class="col-6 offset-3 signup-form ">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div>
                    <label for="username" class="form-label">Username</label>
                    <input id="username" name="username" placeholder="Enter username" type="text" class="form-control"
                        required />
                    <div class="valid-feedback">Looks good!</div>
                    <!-- <div class="invalid-feedback">Location should be valid</div> -->
                </div>

                <div>
                    <label for="email" class="form-label">Email</label>
                    <input id="email" name="email" placeholder="Enter email"  class="form-control"
                        required />
                    <!-- <div class="valid-feedback">Looks good!</div> -->
                    <!-- <div class="invalid-feedback">Location should be valid</div> -->
                </div>

                <div>
                    <label for="password" class="form-label">Password</label>
                    <input id="password" name="password" placeholder="Enter password"  class="form-control"
                        required />
                    <!-- <div class="valid-feedback">Looks good!</div> -->
                    <!-- <div class="invalid-feedback">Location should be valid</div> -->
                </div>

                <button class="mt-2 btn btn-sm btn-outline-success">Signup</button>

                


            </form>

        </div>

    </div>