<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <h3 class="col-6 offset-3" style="text-align: center;">Login</h3>
        <div class="col-6 offset-3 signup-form">
            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div>
                    <label for="username" class="form-label">Username</label>
                    <input id="username" name="username" placeholder="Enter username" type="text" class="form-control"
                        required />
                    <div class="valid-feedback">Looks good!</div>
                    <!-- <div class="invalid-feedback">Location should be valid</div> -->
                </div>

                <br/>
               
                <div>
                    <label for="password" class="form-label">Password</label>
                    <input id="password" name="password" placeholder="Enter password"  class="form-control"
                        required />
                    <!-- <div class="valid-feedback">Looks good!</div> -->
                    <!-- <div class="invalid-feedback">Location should be valid</div> -->
                </div>
                    
                <button class="mt-3 btn btn-sm btn-outline-success">login</button>

                
             

            </form>

        </div>

    </div>